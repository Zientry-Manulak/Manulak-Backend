generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int     @id @default(autoincrement())
  name         String
  bought_price Float
}

model AccessToken {
  id          String   @id @default(cuid())
  token       String   @unique
  user_id     String
  user        User     @relation(fields: [user_id], references: [id])
  refresh_token_id String?      @unique
  refreshToken     RefreshToken? @relation(fields: [refresh_token_id], references: [id])
  expires_at  DateTime
  created_at  DateTime @default(now())
}

model RefreshToken {
  id          String   @id @default(cuid())
  token       String   @unique
  user_id     String
  user        User     @relation(fields: [user_id], references: [id])
  accessToken AccessToken?
  expires_at  DateTime
  created_at  DateTime @default(now())
}

model User {
  id                  String    @id @default(cuid())
  username            String    @db.VarChar(255) @unique
  password            String    @db.VarChar(255)
  role                UserRole  @default(USER)
  created_at          DateTime  @default(now())
  company_id          String
  company             Company   @relation(fields: [company_id], references: [id])
  refreshToken        RefreshToken[]
  accessToken         AccessToken[]
}

enum UserRole {
  USER
  ADMIN
}

model Company {
  id                  String    @id @default(cuid())
  company_name        String    @db.VarChar(255)
  company_descritpion String?   @db.VarChar(255)
  company_images      String[]  @db.VarChar(255)
  phone               String?   @db.VarChar(15)
  email               String?   @unique @db.VarChar(255)
  address             String?   @db.VarChar(255)
  support_number      String?   @db.VarChar(15)
  bank_details        Json?
  social_media        Json?
  created_at          DateTime  @default(now())
  users               User[]
}